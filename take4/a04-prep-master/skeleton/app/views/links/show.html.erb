<h1>Link</h1>


  Title: <%= link_to @link.title, link_url(@link)  %><br>
  Url: <%= @link.url %>
  Author: <%= @link.user.username %>

<% @link.comments.each do |c| %>
  Comment: <%= c.body %>
  <%= button_to 'Remove Comment', comment_url(c), method: :delete %>
<% end %>

<h1>Add Comment</h1>
<form action="<%= link_comments_url(@link) %>" method="post">
    <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">

    <label for="">
      Comment:
      <input type="text" name="comment[body]" value="">
    </label>

    <input type="submit" name="" value="Add Comment">
</form>

<%= link_to 'Edit Link', edit_link_url(@link) %>
<%= link_to 'Links', links_url %>
