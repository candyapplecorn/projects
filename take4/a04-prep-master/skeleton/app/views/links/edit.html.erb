<h1>Edit Link</h1>
<form action="<%= link_url %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <input type="link" name="authenticity_token" value="<%=form_authenticity_token%>">

  <label>
    Title
    <input type="text" name="link[title]" value="<%=@link.title%>">
  </label>

  <label>
    URL
    <input type="text" name="link[url]" value="<%=@link.url%>">
  </label>

  <input type="submit" name="" value="Update Link">
</form>
